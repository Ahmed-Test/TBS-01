<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <!--
        Added the entity Item.
    -->
    <changeSet id="20200318212812-1" author="Ahmed B">
        <createTable tableName="item_history">

            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <!--Mapped fields-->
            <column name="item_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="code" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="price" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>

            <column name="default_quantity" type="integer">
                <constraints nullable="true" />
            </column>

            <column name="category_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="client_id" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="is_flexible_price" type="boolean">
                <constraints nullable="true" />
            </column>

            <!--Manually added -->

            <column name="total_taxes" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="last_modified_by" type="varchar(50)"/>
            <column name="last_modified_date" type="timestamp"/>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>

    </changeSet>


</databaseChangeLog>
